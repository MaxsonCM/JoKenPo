<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            tools:text="Ganhou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvResultado"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ivVoce" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Escolha a sua jogada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/ivPapel"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp" tools:srcCompat="@drawable/pedra"
            android:id="@+id/ivAndroid"
            app:layout_constraintTop_toTopOf="@+id/ivVoce" app:layout_constraintStart_toEndOf="@+id/ivVoce"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="91dp"
            android:layout_height="96dp" app:srcCompat="@drawable/papel"
            android:id="@+id/ivPapel"
            app:layout_constraintStart_toEndOf="@+id/ivPedra" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/ivTesoura"
            app:layout_constraintTop_toTopOf="@+id/ivPedra"/>
    <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp" app:srcCompat="@drawable/pedra"
            android:id="@+id/ivPedra"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/ivPapel"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp" app:srcCompat="@drawable/tesoura"
            android:id="@+id/ivTesoura"
            app:layout_constraintStart_toEndOf="@+id/ivPapel" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivPapel"/>
    <TextView
            android:text="Última jogada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Você"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/ivVoce"
            app:layout_constraintEnd_toEndOf="@+id/ivVoce"/>
    <TextView
            android:text="Android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/ivAndroid"
            app:layout_constraintStart_toStartOf="@+id/ivAndroid"
            app:layout_constraintTop_toTopOf="@+id/textView2"/>
    <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp" tools:srcCompat="@drawable/papel"
            android:id="@+id/ivVoce"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/ivAndroid"/>

</android.support.constraint.ConstraintLayout>